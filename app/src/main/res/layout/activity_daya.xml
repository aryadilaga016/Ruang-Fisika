<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/putih"
    tools:context=".Gravitasi">

    <TextView
        android:id="@+id/tvGravitasi1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/aclonica"
        android:text="DAYA"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivGravitasi"
        android:layout_width="130dp"
        android:layout_height="116dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGravitasi1"
        app:srcCompat="@drawable/renewable_energy_128px" />

    <TextView
        android:id="@+id/tvGravitasi2"
        android:layout_width="367dp"
        android:layout_height="255dp"
        android:text="Daya merupakan Laju Energi yang dihantarkan selama melakukan usaha dalam periode waktu tertentu. Satuan SI (Satuan Internasional) untuk Daya yaitu Joule / Sekon (J/s) = Watt (W). "
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivGravitasi" />

</androidx.constraintlayout.widget.ConstraintLayout>